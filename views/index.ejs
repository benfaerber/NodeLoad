<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>NodeLoad</title>
		<link rel="stylesheet" href="/static/css/bootstrap.min.css" />
		<link rel="stylesheet" href="/static/css/style.css" />
		<script src="/static/js/jquery-3.4.1.min.js"></script>
		<script src="/static/js/upload.js"></script>
	</head>
	<body>
		<div class="container">
			
			<div class="card mt-5">
				<div class="card-header">
					<h3>Upload Files</h3>
				</div>
					<div class="card-body">
						<form enctype="multipart/form-data">
							<div class="form-group">
								<label class="control-label">Upload Path</label>
								<div class="form-group">
									<div class="input-group mb-3">
										<div class="input-group-prepend">
											<span class="input-group-text">E:/</span>
										</div>

										<input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" />
										<div class="search-options dropdown-menu ">
											<a class="dropdown-item" href="#">Action</a>
											<a class="dropdown-item" href="#">Another action</a>
											<a class="dropdown-item" href="#">Something else here</a>
											<div class="dropdown-divider"></div>
											<a class="dropdown-item" href="#">Clear Path</a>
										</div>
										
									</div>
								</div>
							</div>

							<div class="form-group">
								<label for="exampleInputFile">File Selection</label>
								<input type="file" class="form-control-file" id="file" name="file">
							</div>
						</form>
						<button class="btn btn-primary" id="upload-btn">Upload</button>
					</div>
			</div>
			<!-- End Card -->

			<div class="card mt-5" id="uploading" style="display:none;">
				<div class="card-header">
					Uploading...
				</div>
				<div class="card-body" id="upload-body">
					<div class="progress">
						<div id="upload-bar" class="progress-bar progress-bar-striped progress-bar-animated"></div>
					</div>
					<div>
						<span id="upload-percentage"></span> (<span id="upload-size"></span>)
					</div>
					<div id="upload-complete">

					</div>
				</div>
			</div>
		
		<!-- End Container-->
		</div>
	</body>
</html>
